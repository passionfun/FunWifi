<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/main_top_banner"
        layout="@layout/head_login" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:background="@color/main_blue"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/tool_xiansu_big" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/line_gray_main"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="1dp"
        android:dividerHeight="1dp"
        android:layoutAnimation="@anim/slide_listview"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_gray_main"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:background="@color/main_blue"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/add_writh"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/add_device" />
    </LinearLayout>


</LinearLayout>
