<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_menu_layout"
    android:background="@drawable/menu_listitem_select"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_home_image_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/menu_add_sel" />

    <TextView
        android:id="@+id/item_home_image_pm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/slide_menu_text_select"
        android:text="@string/left_menu_add" />

</LinearLayout>