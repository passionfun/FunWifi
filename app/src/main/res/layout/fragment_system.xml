<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/white"
	>
	<include
		android:id="@+id/main_top_banner"
		layout="@layout/head" />
	<LinearLayout
		android:id="@+id/ly_system_wifi"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_wifi"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/menu_wifi" />
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_net"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_netset"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/menu_network" />
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_password"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_password"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/system_password" />
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_reboot"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_reboot"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/reboot" />
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_restore"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/imageView2"
			style="@style/menu_list_image"
			android:src="@mipmap/system_restore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/retore_factory" />
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_version"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_version"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:layout_weight="1"
				android:layout_marginLeft="5dp"
				android:visibility="gone"
				android:textColor="@color/text_color_black"
				 />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:layout_weight="1"
				android:layout_marginLeft="5dp"
				android:textColor="@color/text_color_select"
				android:text="@string/menu_upgrade_firmware" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:layout_weight="1"
				android:layout_marginLeft="5dp"
				android:visibility="gone"
				android:textColor="@color/text_color_black"
				android:text="@string/new_version" />
		</LinearLayout>
		<ImageView
			style="@style/menu_list_jiantou"
			android:padding="5dp"
			android:src="@mipmap/next_arrow"/>
		<!--<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:padding="3dp"
			android:background="@drawable/text_zi_side_shape"
			android:textColor="@color/text_color_select"
			android:text="@string/upgrade"
			/>-->
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@color/line_gray_main"/>
	<LinearLayout
		android:id="@+id/ly_system_light"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:visibility="gone"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			style="@style/menu_list_image"
			android:src="@mipmap/system_light"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_marginLeft="5dp"
			android:textColor="@color/text_color_select"
			android:text="@string/led_stats" />
		<com.xalianhui.wifimanage.ui.view.SwitchButton
			android:id="@+id/msgpush_voiceset"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical"
			/>
	</LinearLayout>
	<View
		android:id="@+id/below_divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:visibility="gone"
		android:background="@color/line_gray_main"/>
</LinearLayout>