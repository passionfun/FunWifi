<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
     >
    <ImageView
        android:id="@+id/iv_item_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/device_phone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_qos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小米4移动版"
            android:singleLine="true"
            android:textColor="@color/text_color_select"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_qos_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/smart_device_context"
            android:textColor="@color/text_color_black"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        style="@style/menu_list_jiantou"
        android:padding="5dp"
        android:src="@mipmap/next_arrow" />
</LinearLayout>
