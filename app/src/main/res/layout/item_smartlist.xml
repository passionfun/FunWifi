<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
     >

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/router_router"/>
    <TextView
        android:id="@+id/tv_iten_name"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_color_select"
        android:text="@string/router_airmesh_point" />
    <ImageView
        android:id="@+id/iv_item_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="3dp"
        android:src="@mipmap/router_in_wifi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/router_wireless"
        android:layout_marginLeft="3dp"
        android:textColor="@color/text_color_select"
        android:textSize="12sp" />


</LinearLayout>
